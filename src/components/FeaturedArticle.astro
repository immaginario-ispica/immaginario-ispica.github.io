---
export interface Props {
  title: string;
  excerpt: string;
  image: string;
  href: string;
  date?: string;
  author?: string;
}

const { title, excerpt, image, href, date, author } = Astro.props;
---

<article class="border-b border-gray-200 pb-8">
  <a href={href} class="block group">
    <div class="aspect-video overflow-hidden mb-6">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    <div>
      {date && <p class="text-sm text-gray-600 mb-2">{date} {author && `• ${author}`}</p>}
      <h3 class="text-2xl font-bold mb-3 group-hover:text-gray-600 transition-colors">{title}</h3>
      <p class="text-gray-700 line-clamp-3 leading-relaxed">{excerpt}</p>
      <div class="mt-4 text-gray-900 font-medium text-sm flex items-center">
        <span>Continua a leggere</span>
        <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
      </div>
    </div>
  </a>
</article>