---
import Button from './Button.astro';

export interface Props {
  coverImage: string;
  issueTitle: string;
  issueNumber: string;
  issueDate: string;
  issuePdfLink: string;
}

const { coverImage, issueTitle, issueNumber, issueDate, issuePdfLink } = Astro.props;
---

<section class="py-12 border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Cover Image -->
      <div class="relative">
        <div class="aspect-[3/4] shadow-lg">
          <img 
            src={coverImage} 
            alt={`Copertina ${issueTitle}`} 
            class="w-full h-full object-cover"
          />
        </div>
        <div class="absolute -bottom-4 -right-4 -z-10 w-full h-full bg-gray-100"></div>
      </div>
      
      <!-- Content -->
      <div class="text-center md:text-left">
        <div class="inline-block px-3 py-1 border border-gray-800 text-sm mb-4">
          Numero {issueNumber} â€¢ {issueDate}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{issueTitle}</h1>
        <p class="text-xl text-gray-700 mb-8 leading-relaxed">
          Giornale mensile gratuito del Centro di Cultura per l'Educazione Permanente di Ispica
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <Button href={issuePdfLink} variant="primary" size="lg" download>
            Scarica l'ultimo numero
          </Button>
          <Button href="#abbonati" variant="outline" size="lg">
            Iscriviti alla newsletter
          </Button>
          <Button href="#featured-articles" variant="accent" size="lg">
            Leggi online
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>