const events = [
  {
    title: "Workshop di Scrittura Creativa",
    date: "15-16 Giugno 2025",
    description: "Un laboratorio intensivo di due giorni dedicato alla narrazione e alla scrittura creativa, guidato dalla scrittrice Maria Rossi.",
    location: "Sala Conferenze del Centro di Cultura",
    image: "https://placehold.co/800x500/e5edff/333333?text=Workshop+di+Scrittura"
  },
  {
    title: "Mostra Fotografica: 'Ispica attraverso i secoli'",
