---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="Contatti" description="Contatta la redazione de L'Immaginario o il Centro di Cultura per l'Educazione Permanente di Ispica" showNewsletter={true}>
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-4xl font-serif font-bold mb-4">Contattaci</h1>
        <p class="text-neutral-600">
          Hai domande, suggerimenti o vuoi collaborare con noi? Siamo a tua disposizione!
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <!-- Contact Info and Form -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div>
            <div class="bg-white rounded-lg p-8 shadow-sm mb-8">
              <h2 class="text-2xl font-serif font-bold mb-6">Informazioni di Contatto</h2>
              
              <div class="space-y-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-1">Indirizzo</h3>
                    <p class="text-neutral-600">
                      Centro di Cultura per l'Educazione Permanente<br>
                      Via Example, 123<br>
                      97014 Ispica (RG)
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-1">Email</h3>
                    <p class="text-neutral-600">
                      <a href="mailto:info@limmaginario.it" class="text-primary-700 hover:underline">info@limmaginario.it</a><br>
                      <a href="mailto:redazione@limmaginario.it" class="text-primary-700 hover:underline">redazione@limmaginario.it</a>
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center text-primary-700 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium mb-1">Telefono</h3>
                    <p class="text-neutral-600">
                      <a href="tel:+390932123456" class="text-primary-700 hover:underline">+39 0932 123456</a><br>
                      <span class="text-sm">(Lun-Ven, 9:00-13:00 / 16:00-19:00)</span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Map -->
            <div class="bg-white rounded-lg p-8 shadow-sm">
              <h2 class="text-2xl font-serif font-bold mb-4">Dove Trovarci</h2>
              <div class="aspect-video rounded-lg overflow-hidden bg-neutral-200">
                <img 
                  src="https://placehold.co/800x450/e5edff/333333?text=Mappa+Centro+di+Cultura" 
                  alt="Mappa del Centro di Cultura"
                  class="w-full h-full object-cover"
                />
              </div>
              <p class="text-sm text-neutral-500 mt-2 text-center">
                Il Centro di Cultura si trova nel centro storico di Ispica, a pochi passi dalla Basilica.
              </p>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div class="bg-white rounded-lg p-8 shadow-sm">
            <h2 class="text-2xl font-serif font-bold mb-6">Inviaci un Messaggio</h2>
            
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-neutral-700 mb-1">Nome e Cognome</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 rounded-md border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-opacity-50 transition-colors"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 rounded-md border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-opacity-50 transition-colors"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-neutral-700 mb-1">Oggetto</label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-2 rounded-md border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-opacity-50 transition-colors"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">Messaggio</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="w-full px-4 py-2 rounded-md border border-neutral-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-opacity-50 transition-colors"
                ></textarea>
              </div>
              
              <div class="flex items-start">
                <input
                  id="privacy"
                  name="privacy"
                  type="checkbox"
                  required
                  class="h-4 w-4 rounded border-neutral-300 text-primary-600 focus:ring-primary-500 mt-1"
                />
                <label for="privacy" class="ml-2 block text-sm text-neutral-600">
                  Ho letto e accetto la <a href="/privacy" class="text-primary-600 hover:text-primary-700 underline">Privacy Policy</a> e acconsento al trattamento dei miei dati personali
                </label>
              </div>
              
              <div>
                <Button type="submit" variant="primary">
                  Invia Messaggio
                </Button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>